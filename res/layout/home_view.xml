<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >
    
    <RelativeLayout
        android:id="@+id/nav_bar_layout"
       	android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:layout_alignParentTop="true"
    	android:background="@drawable/nav_bar"
        >

        <TextView
            android:id="@+id/nav_bar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Kashmir"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"/>

     </RelativeLayout>   

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav_bar_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >
             
             <HorizontalScrollView
                android:id="@+id/horiztonal_scrollview_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none" >

                <LinearLayout
                    android:id="@+id/horiztonal_outer_layout_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/horiztonal_scrollview_id12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:visibility="gone"
                android:scaleType="matrix" >

                <LinearLayout
                    android:id="@+id/horiztonal_outer_layout_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dip" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/squid" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/yellow_fish" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/coral_reef" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/shutterstock" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/shutterstocksrinagar" />
                </LinearLayout>
            </HorizontalScrollView>

           <RelativeLayout
                android:id="@+id/relative_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horiztonal_scrollview_id"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:padding="5dp" >
              <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discover Kashmir.Click an icon to get started now."
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt1"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:text="Discover it...!!"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>


             <RelativeLayout
                android:id="@+id/mainpage_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/relative_middle"
                >


                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >
                    
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageButton
                            android:id="@+id/imgBtn_Hotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/hotel_btn" />

                        <ImageButton
                            android:id="@+id/imgBtn_restaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/resturant_btn" />
                    </TableRow>
                    
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                         >
                        
                        <ImageButton
                            android:id="@+id/imgBtn_Iterative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/itineriris_btn"
                            android:layout_marginRight="4dp" />
                        
                        <ImageButton
                            android:id="@+id/imgBtn_Deals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/deals_btn" />
                        
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                         >
                        
                        <ImageButton
                            android:id="@+id/imgBtn_Feedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/feedback_btn" />
                        
                        <ImageButton
                            android:id="@+id/imgBtn_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/contact_btn" />

                    </TableRow>
                </TableLayout>
            </RelativeLayout>

           <TextView
                android:id="@+id/txt_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/feedbackbtn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_below="@+id/mainpage_relative"
                android:layout_marginTop="30dp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>